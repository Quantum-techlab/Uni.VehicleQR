rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access for files in the passports and qrcodes folders
    // This is necessary to resolve the CORS preflight 'OPTIONS' request issue.
    // Write access is still restricted to authenticated users.
    match /passports/{fileName} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /qrcodes/{fileName} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
