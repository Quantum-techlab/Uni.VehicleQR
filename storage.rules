rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files.
    // This allows the browser's unauthenticated preflight check to succeed.
    match /{allPaths=**} {
      allow read;
      // Secure write access, allowing only authenticated users to upload.
      allow write: if request.auth != null;
    }
  }
}
